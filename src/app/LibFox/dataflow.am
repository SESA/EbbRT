EXTRA_PROGRAMS += src/app/LibFox/mcphoton-dataflow

src_app_LibFox_mcphoton_dataflow_SOURCES = \
	src/app/LibFox/app-dataflow.cpp \
	src/app/LibFox/mcphoton-dataflow.cpp \
	src/app/LibFox/MCPhotonExecutor.cpp \
	src/app/LibFox/photon.c

src_app_LibFox_mcphoton_dataflow_ebbs = \
	src/ebb/EbbManager/PrimitiveEbbManager.la \
	src/ebb/EventManager/SimpleEventManager.la \
	src/ebb/MessageManager/MPIMessageManager.la \
	src/ebb/DataflowCoordinator/SingleDataflowCoordinator.la \
	src/ebb/HashTable/SimpleRemoteHashTable.la \
	src/ebb/FailureDetector/PhiAccrualFailureDetector.la \
	src/ebb/Timer/SimpleTimer.la

src_app_LibFox_mcphoton_dataflow_CPPFLAGS = \
	$(CPPFLAGS) \
	-I$PROTOBUF_INCLUDEDIR

src_app_LibFox_mcphoton_dataflow_linked_ebbs = $(foreach ebb,$(src_app_LibFox_mcphoton_dataflow_ebbs),$(if $(filter %.la,$(ebb)),$(dir $(ebb)).libs/$(STATIC_LIBRARY_PREFIX)$(notdir $(basename $(ebb))).a,$(ebb)))

src_app_LibFox_mcphoton_dataflow_LDFLAGS = \
	$(app_linkflags) \
	-Wl,'-whole-archive,$(subst $(SPACE),$(COMMA),$(strip $(ebbrt_libs) $(src_app_LibFox_mcphoton_dataflow_linked_ebbs))),-no-whole-archive' \
	-L$(PROTOBUF_LIBDIR)

src_app_LibFox_mcphoton_dataflow_LDADD = \
	libebbrt.la

src_app_LibFox_mcphoton_dataflow_DEPENDENCIES = \
	libebbrt.la \
	$(app_deps) \
	$(ebbrt_libs) \
	$(src_app_LibFox_mcphoton_dataflow_ebbs)
